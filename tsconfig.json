{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"declaration": true,
		"skipLibCheck": true,
		"lib": [
			"es2016"
		],
		"outDir": "out"
	},
	"include": [
		"src/**/*.ts",
		"typings/**/*.d.ts",
		"test/**/*.ts"
	]
}
